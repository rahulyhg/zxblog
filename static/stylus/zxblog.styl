body
  margin 0
  a.coffee-link
    width 26px
    height 40px
    background url(/static/imgs/icons.png) coffee-link-pos
    float left
    position fixed
    top 34px
    left 30px
    cursor pointer
body, a, span
  font-family Frutiger, "Frutiger Linotype", Univers, Calibri, "Gill Sans", "Gill Sans MT", "Myriad Pro", Myriad, "DejaVu Sans Condensed", "Liberation Sans", "Nimbus Sans L", Tahoma, Geneva, "Helvetica Neue", Helvetica, Arial, sans-serif
.pg-item-box
  width 100%
  min-width pg-width
  background-color white
  .pg-item
    margin auto
    width pg-width
.ng-view-box
    clear both

.cup-bar-box
  height cup-bar-ht
  background-color cup-bar-bg
  position fixed
  top 0
  z-index -1000
  .cup-bar-logo
    margin-left pg-width-left
    margin-top cup-bar-ht - 212px
    display inline-block
    width 343px
    height 212px
    background url(/static/imgs/icons.png) -0px 2px

.fixed-header-bar
  position fixed
  top 0
  z-index 1000
.unfix-header-bar
  position fixed
  top 240px

.header-bar-box
  height header-bar-ht
  background-color header-bar-bg
  color red
  .header-bar-logo
    height 42px
    width 296px
  .header-bar-logo-normal
    background url(/static/imgs/icons.png) header-bar-logo-pos
    &:hover
      background url(/static/imgs/icons.png) header-bar-logo-hover-pos
  .header-bar-logo-about
    background url(/static/imgs/icons.png) header-bar-logo-about-pos
  .header-bar-link-active
    color header-bar-hover-color
  .header-bar-link-hib
    color header-bar-color
  .header-bar-links
    float right
    line-height header-bar-ht - 60px
    margin-left 160px
    text-decoration none
    font-weight bold
    font-size 14px
    letter-spacing 1px
    position relative
    top 50%
    margin-top -30px
    &:hover
      color header-bar-hover-color
      //text-decoration underline

.footer-bar-box
  height footer-bar-ht
  background-color footer-bar-bg
  letter-spacing 1px
  .footer-bar-link-list
    line-height 150%
  .footer-bar a
    color header-bar-color
    text-decoration none
    &:hover
      color footer-bar-hover-color
      text-decoration none
  .footer-bar
    .lk-dividor
      margin 0 10px
      color header-bar-color
    .footer-bar-copyright
      color header-bar-color

.about-page
  padding-bottom 40px
  padding-top 1px
  .about-item
    margin-top 40px
  .email-item
    height 480px
    background url(/static/imgs/about-4.jpg) -0px -0px
    .email-btn
      display block
      position relative
      top 350px
      width 138px
      margin auto
      height 40px
      background url(/static/imgs/icons.png) -0px -412px
      &:hover
        background url(/static/imgs/icons.png) -148px -412px

.ports
  margin-right - port-space
  margin-top 40px
  //div
  //  outline show-outline
  .port
    width port-ht
    height port-ht
    display inline-block
    border port-bd-w port-bg solid
    margin 0 port-space 70px 0
    overflow hidden
    background-color port-bg
    >div
      height 100%
    .port-hover
      .port-desc
        height port-ht - 70px - 30px
        padding-top 30px
        span
          width 176px
          margin auto
          display block
          overflow hidden
      .port-goto
        height 70px
        a
          display block
          position relative
          width 176px
          margin auto
          height 40px
          background url(/static/imgs/icons.png) port-goto-bg-pos
          &:hover
            background url(/static/imgs/icons.png) port-goto-hover-bg-pos
.posts-pg-left
  width posts-list-left
  display inline-block
  float left
.posts-pg-right
  width pg-width - posts-list-left
  display inline-block

.posts-list
  &:hover
    background-color posts-list-hover-bg
  .posts-list-item
    padding 30px 0
    table
      border-collapse collapse
      border-spacing 0
      tr, td, th
        padding 0
        margin 0
    .posts-pg-left
      letter-spacing 1px
      span
        font-size 14px
      .post-cat-item
        text-transform capitalize
    .posts-pg-right
      letter-spacing 1px
      .post-list-item-title a
        text-transform capitalize
        font-size 28px
        text-decoration none
        color posts-list-title-color
      .post-list-item-thumbnail
        margin 30px 0 0 0
        img
          max-width 100%
      .post-list-item-content
        font-size 14px
        margin-top 30px
        

.post-cats
  height 120px
  border-bottom 1px #ebebeb solid
  >div
    height 120px
    float left
  a.post-cat-item
    margin 40px 20px 0 0
    padding post-cat-padding
    display inline-block
    line-height 40px
    height 40px
    font-size 14px
    text-decoration none
    line-height 40px
    color cat-item-color
    letter-spacing 1px
    text-decoration none
    &.pg-current
      background-color cat-item-hover-bg-color
      color cat-item-hover-color
    &.pg-normal
      background-color cat-item-bg-color
      &:visited
        color cat-item-color
      &:hover
        background-color cat-item-hover-bg-color
        color cat-item-hover-color
        //text-decoration underline


.pages-nav
  text-align center
  padding 40px 0
  .pages
    margin auto
    height 40px
    display inline-block
    .pg-item
      width 40px
      height 40px
      margin-right 20px
      display inline-block
      a
        width 40px
        height 40px
        display block
        text-decoration none
        line-height 40px
        &.pg-current
          background-color btn-bg-hover
          color btn-hover-color
          //text-decoration underline
        &.pg-normal
          background-color btn-bg-dis
          color btn-color
          &:hover
            color btn-hover-color
            background-color btn-bg-hover
            //text-decoration underline

.post-page
  letter-spacing 1.5px
  font-size 18px
  line-height 150%
  padding 40px 0
  overflow hidden
  .post-info
    width 700px
    margin-bottom 30px
    .post-title
      font-size 28px
      color post-page-title-color
      text-transform capitalize
      margin-bottom 20px
    .post-date-cat
      font-size 14px
      text-transform capitalize
      .post-cat>a
        text-decoration none
        color post-page-title-color
        &:hover
          color post-page-cat-hover-color
      .post-date
        margin-left 40px
  .post-content
    >p
      width 720px
    a
      color header-bar-hover-color
    .wp-caption>p.wp-caption-text
      margin-top 10px
      font-size 14px
      color #c9c9c9
      font-style italic
  .post-comment
    .com-header
      font-size 18px
      margin 40px 0 20px 0
      font-weight bold
    >div.comments .comment
      margin-bottom 40px
      line-height 14px
      font-size 14px
      max-width 720px
      word-break break-all
      .comment-info
        font-style italic
        margin-top 20px
        color #c9c9c9
        .comment-date
          margin-left 40px
    >div.comment-post
      textarea
        height 200px
        width 400px
        font-size 14px
        border 1px solid #ebebeb
        &:focus
          border 1px solid #313131
      label
        margin 20px 0
        font-size 18px
        clear both
        display block
        line-height 18px
      input[type=text], input[type=email]
        font-size 18px
        width 400px
        height 50px
        border 1px solid #ebebeb
        &:focus
          border 1px solid #313131
      button
        display block
        height 40px
        width 196px
        border none
        background url(/static/imgs/icons.png) post-comment-btn-pos
        &:disabled
          background url(/static/imgs/icons.png) post-comment-btn-dis-pos
          &:hover
            background url(/static/imgs/icons.png) post-comment-btn-dis-pos
            cursor default
        &:hover
          background url(/static/imgs/icons.png) post-comment-btn-hover-pos
          cursor pointer
      .button-div
        margin-top 30px

.post-nav
  padding 30px 0
  a
    font-size 18px
    text-decoration none
    color post-nav-color
    font-weight bold
    line-height 18px
    &:before
      margin-right 20px
  .next-post a:before
    content ">"
  .prev-post a:before
    content "<"
  &:hover
    background-color posts-list-hover-bg

.cover-page
  letter-spacing 1px
  width 620px
  min-width 620px
  position fixed
  left 50%
  top 50%
  margin -320px 0 0 -340px
  .pot-layer
    width 100%
    height 470px
  .loc-layer
    height 30px
    width 180px
    background url(/static/imgs/icons.png) 0 -1192px
    margin 18px 0 0 18px
  .couple
    position relative
    top -110px
    left 220px
    font-size 14px
    >div
      width 200px
      float left
      cursor pointer
      .c-drop
        width 20px
        height 20px
        margin 5px auto 5px auto
      .c-intro
        width 100%
        >span
          display table
          margin auto
        .c-name
          margin-bottom 20px
      .c-header .header-holder
        width 66px
        height 66px
        margin 11px auto 25px auto
    .c-normal
      .c-name
        color #de5b38
      span
        color #313131
      .c-l-header .header-holder
        background url(/static/imgs/ZC100.png) 0 0
      .c-r-header .header-holder
        background url(/static/imgs/ZX100.png) 0 0
      .c-drop
        background url(/static/imgs/icons.png) 6px -1248px
    .c-unhover
      .c-name
        color #eead9b
      span
        color #989898
      .c-l-header .header-holder
        background url(/static/imgs/ZC50.png) 0 0
      .c-r-header .header-holder
        background url(/static/imgs/ZX50.png) 0 0
      .c-drop
        background url(/static/imgs/icons.png) -12px -1248px
    .c-left .c-intro
      border-right #e2e2e2 solid 1px
        
textarea:hover, 
input:hover, 
textarea:active, 
input:active, 
textarea:focus, 
input:focus,
button:focus,
button:active,
button:hover
    outline 0px !important
    -webkit-appearance none
 
